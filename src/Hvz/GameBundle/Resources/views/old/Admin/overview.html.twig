{# src/Hvz/GameBundle/Resources/views/Admin/overview.html.twig #}
{% extends 'HvzGameBundle::base.html.twig' %}

{% block pre_container %}
	{{ render(controller('HvzGameBundle:Component:navbar', { active: 'admin' })) }}
{% endblock %}

{% block container %}
	<div class="row">
		<div class="col-md-12">
			<h1 class="text-center">Admin Panel</h1>
		</div>
	</div>

	<div class="row">
		{% include 'HvzGameBundle:Component:admin_nav.html.twig' with {'active': 'overview'} %}

		<div class="col-md-10">
			<div class="row">
				<div class="col-md-5 col-md-offset-1 well text-center">
					<h1>{{ humans }}</h1>
					<p>Humans</p>
				</div>
				<div class="col-md-5 col-md-offset-1 well text-center">
					<h1>{{ zombies }}</h1>
					<p>Zombies</p>
				</div>
			</div>
		</div>
	</div>
{% endblock %}