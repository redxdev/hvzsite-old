{# src/Hvz/GameBundle/Resources/views/Admin/news_posts.html.twig #}
{% extends 'HvzGameBundle::base.html.twig' %}

{% block pre_container %}
	{{ render(controller('HvzGameBundle:Component:navbar', { active: 'admin' })) }}
{% endblock %}

{% block container %}
	<div class="row">
		<div class="col-md-12">
			<h1 class="text-center">Admin Panel</h1>
		</div>
	</div>

	<div class="row">
		{% include 'HvzGameBundle:Component:admin_nav.html.twig' with {'active': 'news-posts'} %}

		<div class="col-md-10">
				<div class="row">
					<div class="col-md-12 text-right">
						Actions:
						<a href="{{ path('hvz_admin_post_create') }}">Create</a>
					</div>
				</div>
			{% for post in posts %}
				<div class="row">
					<div class="col-md-12 well">
						<div class="alert alert-info">
							<h3 class="text-center">{{ post.title }} <small>{{ post.subtitle }}</small></h3>
							<p><strong>Author:</strong> {{ post.user }}</p>
							<p><strong>Post date:</strong> {{ post.postdate }}</p>
							<p>
								<strong>Actions:</strong>
								<a class="btn btn-primary" href="{{ path('hvz_admin_post_edit', {'id': post.id}) }}">Edit</a> |
								<a class="btn btn-danger" href="{{ path('hvz_admin_post_delete', {'id': post.id}) }}">Delete</a>
							</p>
						</div>
						{{ post.body | raw | nl2br }}
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}