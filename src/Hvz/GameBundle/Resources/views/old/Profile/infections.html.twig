{# src/Hvz/GameBundle/Resources/views/Profile/infections.html.twig #}
{% extends 'HvzGameBundle::base.html.twig' %}

{% block pre_container %}
	{{ render(controller('HvzGameBundle:Component:navbar', { active: '' })) }}
{% endblock %}

{% block container %}
	<div class="row">
		<div class="col-md-12">
			<h1 class="text-center">Profile: My Infections</h1>
		</div>
	</div>

	<div class="row">
		{% include 'HvzGameBundle:Component:profile_nav.html.twig' with {'active': 'infections'} %}

		<div class="col-md-9">
			<table class="table table-hover">
				<thead>
					<tr>
						<th>Victim</th>
						<th>Time</th>
					</tr>
				</thead>
				<tbody>
					{% for tag in profile.infections %}
						<tr>
							<td>{{ tag.victim }}</td>
							<td>{{ tag.time }}</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
{% endblock %}