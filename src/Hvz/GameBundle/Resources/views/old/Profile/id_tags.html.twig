{# src/Hvz/GameBundle/Resources/views/Profile/id_tags.html.twig #}
{% extends 'HvzGameBundle::base.html.twig' %}

{% block pre_container %}
	{{ render(controller('HvzGameBundle:Component:navbar', { active: '' })) }}
{% endblock %}

{% block container %}
	<div class="row">
		<div class="col-md-12">
			<h1 class="text-center">Profile: My ID Tags</h1>
		</div>
	</div>

	<div class="row">
		{% include 'HvzGameBundle:Component:profile_nav.html.twig' with {'active': 'id_tags'} %}

		<div class="col-md-9">
			<div class="row">
				<div class="col-md-8 col-md-offset-2">
					<p><strong>Player ID:</strong> {{ profile.playerid }}</p>
				</div>
			</div>

			{% for id in profile.id_tags %}
				<div class="row">
					<div class="col-md-8 col-md-offset-2">
						<p>
							<strong>Tag:</strong>
							{% if id.active == false %}
							<strike>{{ id.tag }}</strike>
							{% else %}
							{{ id.tag }}
							{% endif %}
						</p>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}