{% extends 'HvzGameBundle::base.html.twig' %}
{% import 'HvzGameBundle::components.html.twig' as components %}

{% block title %}
    Tags | {{ parent() }}
{% endblock %}

{% block body_def %}
    class="navbar-offset"
{% endblock %}

{% block body %}
    {{ parent() }}

    {{ components.navbar('fixed-top', 'tags') }}

    <div class="container">
        <div class="vertical-space"></div>
        <div class="row">
            <div id="tag-list" class="col-md-12 text-center">
                {% for tag in tags if tag.zombie != null %}
                    <p><strong>{{ tag.victim }}</strong> was tagged by <strong>{{ tag.zombie }}</strong> <em>{{ time_diff(tag.time) }}</em></p>
                {% endfor %}
            </div>
        </div>

        {% if previous_page is defined or next_page is defined %}
            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                    <ul class="pager">
                        {% if previous_page is defined and previous_page != -1 %}
                            <li><a href="{{ path('hvz_tags', {'page': previous_page}) }}">&larr; Previous</a></li>
                        {% endif %}
                        {% if next_page is defined and next_page != -1%}
                            <li><a href="{{ path('hvz_tags', {'page': next_page}) }}">Next &rarr;</a></li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}

{% block content %}
	{{ parent() }}

	{% for tag in tags if tag.zombie != null %}
		<div class="card">
			<paper-shadow z="1"></paper-shadow>
			<div class="card-internal" vertical layout center center-justified>
				<p><strong>{{ tag.victim }}</strong> was tagged by <strong>{{ tag.zombie }}</strong> on <em>{{ tag.time }}</em></p>
			</div>
		</div>
	{% endfor %}

	{% if previous_page is defined or next_page is defined %}
		<div horizontal layout center center-justified>
			<div class="card">
				<paper-shadow z="1"></paper-shadow>
				<div class="card-internal" horizontal layout center wrap center-justified>
					{% if previous_page is defined and previous_page != -1 %}
						<a href="{{ path('hvz_tags', {'page': previous_page}) }}"><paper-button label="<<"></paper-button></a>
					{% endif %}
					{% if next_page is defined and next_page != -1 %}
						<a href="{{ path('hvz_tags', {'page': next_page}) }}"><paper-button label=">>"></paper-button></a>
					{% endif %}
				</div>
			</div>
		</div>
	{% endif %}
{% endblock %}
