{% extends 'HvzGameBundle::base.html.twig' %}
{% import 'HvzGameBundle::components.html.twig' as components %}

{% block title %}
    Players | {{ parent() }}
{% endblock %}

{% block body_def %}
    class="navbar-offset"
{% endblock %}

{% block body %}
    {{ parent() }}

    {{ components.navbar('fixed-top', 'players') }}

    <div class="container">
        <div class="row">
            <div class="col-md-5 col-sm-4">
                <div class="row">
                    <div class="col-md-1 col-md-offset-2">
                        Sort:
                    </div>
                    <div class="col-md-6">
                        <ul class="nav nav-pills">
                            <li{% if not sort %} class="active"{% endif %}><a href="{{ path('hvz_players') }}">Team</a></li>
                            <li{% if sort == 'clan' %} class="active"{% endif %}><a href="{{ path('hvz_players', {'sort': 'clan'}) }}">Clan</a></li>
                            <li{% if sort == 'mods' %} class="active"{% endif %}><a href="{{ path('hvz_players', {'sort': 'mods'}) }}">Mods</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-md-5 col-md-offset-2 col-sm-8">
                <form role="search" action="{{ path('hvz_players_search') }}" method="get">
                    <div class="input-group">
                        <input name="term" type="text" class="form-control" placeholder="Search">
                        <div class="input-group-btn">
                            <button type="submit" class="btn btn-default">
                                <span class="glyphicon glyphicon-search"></span>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <div class="vertical-space"></div>

        <div id="player-list">
            {% for player in players %}
                <div class="row well {% if player.team == 'human' %}bg-human{% else %}bg-zombie{% endif %}">
                    <div class="col-sm-2">
                        {% if player.avatar %}
                            <img src="{{ asset(player.avatar) }}" alt="avatar" class="avatar">
                        {% else %}
                            <img src="holder.js/100x100" alt="avatar" class="avatar">
                        {% endif %}
                    </div>
                    <div class="col-sm-3">
                        <p><strong>{{ player.fullname }}</strong></p>
                        <p><strong>Tags:</strong> {{ player.tags }}</p>
                        <p><strong>Clan:</strong> {{ player.clan | default('none') }}</p>
                    </div>
                    <div class="col-sm-7">
                        {% for badge in player.badges %}
                            <img data-toggle="tooltip" data-placement="top" data-html="true"
                                 title="<p><strong>{{ badge.name }}</strong></p><p>{{ badge.description }}</p>"
                                 src="{{ asset('bundles/hvzgame/images/badges/' ~ badge.image) }}"
                                 alt="{{ badge.name }} badge">
                        {% endfor %}
                    </div>
                </div>
            {% else %}
                <div class="row">
                    <div class="col-md-12 text-center">
                        <h1>There were no players found</h1>
                    </div>
                </div>
            {% endfor %}
        </div>

        {% if previous_page is defined or next_page is defined %}
            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                    <ul class="pager">
                        {% if previous_page is defined and previous_page != -1 %}
                            <li><a href="{{ path('hvz_players', {'page': previous_page, 'sort': sort}) }}">&larr; Previous</a></li>
                        {% endif %}
                        {% if next_page is defined and next_page != -1%}
                            <li><a href="{{ path('hvz_players', {'page': next_page, 'sort': sort}) }}">Next &rarr;</a></li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}

{% block content %}
	{{ parent() }}

	{% if previous_page is defined or next_page is defined %}
		<div horizontal layout center center-justified>
			<div class="card">
				<paper-shadow z="1"></paper-shadow>
				<div class="card-internal" horizontal layout center wrap center-justified>
					{% if previous_page is defined and previous_page != -1 %}
						<a href="{{ path('hvz_players', {'page': previous_page, 'sort': sort}) }}"><paper-button label="<<"></paper-button></a>
					{% endif %}
					{% if next_page is defined and next_page != -1 %}
						<a href="{{ path('hvz_players', {'page': next_page, 'sort': sort}) }}"><paper-button label=">>"></paper-button></a>
					{% endif %}
				</div>
			</div>
		</div>
	{% endif %}
{% endblock %}

{% block body_javascripts %}
    {{ parent() }}

    <script type="text/javascript">
        $(function() {
            $("[data-toggle='tooltip']").tooltip();
        });
    </script>
{% endblock %}