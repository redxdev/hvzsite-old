{% macro nav_internal_link(id, url, text, selected) %}
    <li{% if id == selected %} class="active"{% endif %}><a href="{{ url }}">{{ text }}</a></li>
{% endmacro %}

{% macro navbar(type, selected) %}
    {% import _self as components %}
    <div class="navbar navbar-default navbar-{{ type }}" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-main-nav">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div class="visible-lg visible-md navbar-brand navbar-brand-centered">
                    <a href="#">
                        <img class="logo" src="holder.js/150x150" alt="HvZ @ RIT">
                    </a>
                </div>
                <div class="visible-xs visible-sm navbar-brand">
                    HvZ @ RIT
                </div>
            </div>

            <div class="collapse navbar-collapse" id="navbar-main-nav">
                <ul class="nav navbar-nav">
                    {{ components.nav_internal_link('status', path('hvz_index'), 'Status', selected) }}
                    {{ components.nav_internal_link('players', path('hvz_players'), 'Players', selected) }}
                    {{ components.nav_internal_link('tags', path('hvz_tags'), 'Tags', selected) }}
                    {{ components.nav_internal_link('spread', '#', 'Spread', selected) }}
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    {{ components.nav_internal_link('map', path('hvz_map'), 'Map', selected) }}
                    {{ components.nav_internal_link('rules', path('hvz_rules'), 'Rules', selected) }}
                    {{ components.nav_internal_link('register-tag', path('hvz_register_tag'), 'Register Tag', selected) }}
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Account <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="#">Login</a></li>
                            <li><a href="#">Register</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>
{% endmacro %}