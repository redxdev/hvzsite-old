<!DOCTYPE html>
<html lang="en">
<head>
	{% block meta %}
		<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
	    <meta charset="utf-8">
		<meta name="description" content="{{ description | default('') }}">
	    <meta name="author" content="{{ author | default('') }}">
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
		<meta name="mobile-web-app-capable" content="yes">
		<meta name="apple-mobile-web-app-capable" content="yes">
	{% endblock %}

	<link rel="shortcut icon" type="image/png" href="{{ asset('bundles/hvzgame/images/favicon.png') }}">

    <title>{% block title %}HvZ @ RIT{% endblock %}</title>

	{% block stylesheets %}
        {% stylesheets
            'bundles/hvzgame/bower_components/bootstrap/dist/css/bootstrap.css'
            'bundles/hvzgame/bower_components/bootswatch/cosmo/bootstrap.css'
            'bundles/hvzgame/bower_components/snackbarjs/dist/snackbar.min.css'
            'bundles/hvzgame/bower_components/snackbarjs/themes-css/material.css'
            'bundles/hvzgame/css/app.css'
            filter='cssrewrite' %}
            <link rel="stylesheet" href="{{ asset_url }}">
        {% endstylesheets %}
	{% endblock %}

    {% block javascripts %}
        <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!--[if lt IE 9]>
            <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
            <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->
    {% endblock %}

	{% block head %}
	{% endblock %}
</head>
<body{% block body_def %}{% endblock %}>
	{% block body %}
	{% endblock %}

    {% block footer %}
        <div class="footer">
            <div class="container">
                <p class="text-muted pull-right">Copyright &copy; 2014</p>
            </div>
        </div>
    {% endblock %}

	{% block body_javascripts %}
        {% javascripts
            'bundles/hvzgame/bower_components/jquery/dist/jquery.min.js'
            'bundles/hvzgame/bower_components/bootstrap/dist/js/bootstrap.min.js'
            'bundles/hvzgame/bower_components/snackbarjs/dist/snackbar.min.js'
            'bundles/hvzgame/bower_components/holderjs/holder.js'
            %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}

        {% block snackbars %}
            {% set toasts = app.session.flashbag.get('page.toast') %}
            {% if toasts and toasts|length > 0 %}
                <script type="text/javascript">
                    $(function() {
                        {% for toast in toasts %}
                            $.snackbar({
                                content: "{{ toast | e('js') }}",
                                style: "snackbar",
                                timeout: 4000
                            });
                        {% endfor %}
                    });
                </script>
            {% endif %}
        {% endblock %}
	{% endblock %}
</body>
</html>
